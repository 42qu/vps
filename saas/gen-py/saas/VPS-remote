import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import VPS
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  Todo todo(i32 host_id)'
  print '  Vps info(i32 vps_id)'
  print '  void opened(i32 vps_id)'
  print '  void closed(i32 vps_id)'
  print '  void restart(i32 vps_id)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = VPS.Client(protocol)
transport.open()

if cmd == 'todo':
  if len(args) != 1:
    print 'todo requires 1 args'
    sys.exit(1)
  pp.pprint(client.todo(eval(args[0]),))

elif cmd == 'info':
  if len(args) != 1:
    print 'info requires 1 args'
    sys.exit(1)
  pp.pprint(client.info(eval(args[0]),))

elif cmd == 'opened':
  if len(args) != 1:
    print 'opened requires 1 args'
    sys.exit(1)
  pp.pprint(client.opened(eval(args[0]),))

elif cmd == 'closed':
  if len(args) != 1:
    print 'closed requires 1 args'
    sys.exit(1)
  pp.pprint(client.closed(eval(args[0]),))

elif cmd == 'restart':
  if len(args) != 1:
    print 'restart requires 1 args'
    sys.exit(1)
  pp.pprint(client.restart(eval(args[0]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
